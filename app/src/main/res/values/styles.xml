<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/rojo</item>
        <item name="colorPrimaryDark">@color/rojo</item>
        <item name="colorAccent">@color/rojo</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeamarillo" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/amarrilloboton</item>
        <item name="colorPrimaryDark">@color/barraazul</item>
        <item name="colorAccent">@color/amarrilloboton</item>
        <item name="titleTextColor">@color/colornegro</item>
    </style>

    <style name="AppThemeazul" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/azulboton</item>
        <item name="colorPrimaryDark">@color/barraazul</item>
        <item name="colorAccent">@color/azulboton</item>
    </style>

    <style name="AppThemerojo" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/rojo</item>
        <item name="colorPrimaryDark">@color/barraazul</item>
        <item name="colorAccent">@color/rojo</item>
    </style>

    <style name="AppThemenaranja" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/naranjaboton</item>
        <item name="colorPrimaryDark">@color/barraazul</item>
        <item name="colorAccent">@color/naranjaboton</item>
    </style>

    <style name="AppThemeverde" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/berdeboton</item>
        <item name="colorPrimaryDark">@color/barraazul</item>
        <item name="colorAccent">@color/berdeboton</item>
        <item name="titleTextColor">@color/colornegro</item>
    </style>


</resources>
